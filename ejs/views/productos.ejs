<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous"
        />
        <title>Con EJS</title>
      </head>
  <body class="container bg-light">
    <header>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Formulario</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/productos">Productos</a>
          </li>
        </ul>
    </header>

    <h2 class="text-danger mt-4 fs-2">Productos cargados</h2>
    <% if (productos.length < 1) { %>
    <h5 class="alert-danger rounded p-2">No se encontraron datos</h5>
    <% } else { %>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="fs-4">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">TÃ­tulo</th>
                    <th scope="col">Precio</th>
                    <th scope="col">URL imagen</th>
                  </tr>
                </thead>
                <tbody class="fs-5">
                  <% productos.forEach(producto => { %>
                      <tr>
                          <th scope="row"><%= producto.id %></th>
                          <td><%= producto.title %></td>
                          <td><%= producto.price %></td>
                          <td> <img src= <%= producto.thumbnail %> width="40px" height="40px" ></td>
                        </tr>
                  <% }); %> 
                </tbody>
              </table>
        </div>
    
    <% } %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>